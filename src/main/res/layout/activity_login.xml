<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background3"

    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/logo"
    android:gravity="center"
    >

    <ImageView
        android:layout_width="500px"
        android:layout_height="170dp"
        android:layout_margin="8dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/mrbadrbigtrlogo" />

</LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signin"
        android:text="Sign in"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="130dp"
        android:textStyle="normal"
        android:gravity="center"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/emaillogin"
        android:layout_below="@id/signin"
        android:background="#30ffffff"
        android:hint="email"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/baseline_person_outline_24"
        android:drawablePadding="20dp"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passwordlogin"
        android:layout_below="@id/emaillogin"
        android:background="#30ffffff"
        android:hint="password"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:drawablePadding="20dp"
        android:inputType="textPassword"


        />
    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginbutton"
        android:layout_below="@id/passwordlogin"
        android:text="Login"
        android:backgroundTint="@color/design_default_color_secondary"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"

        />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/noaccreguster"
    android:gravity="center"
    android:layout_below="@+id/loginbutton"
    android:layout_centerHorizontal="true">
    <TextView
        android:id="@+id/donthaveanaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"

        android:text="you don't have an account ?"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="normal" />
    <TextView
        android:id="@+id/signuptxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:text="sign up?"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold" />
</LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forgetpwd"
        android:layout_below="@id/noaccreguster"
        android:text="forgot password ?"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="normal"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signinwith"
        android:layout_above="@id/icons"
        android:text="Sign in with : "
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="normal"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/icons"
        android:gravity="center">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="47dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/twitter3d"/>
        <ImageView
            android:layout_width="48dp"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/google3d"/>
        <ImageView
            android:layout_width="48dp"
            android:layout_height="47dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/facebook3d"/>


    </LinearLayout>

</RelativeLayout>